{
  "name": "pokedex-api",
  "private": true,
  "description": "The API for the Pokedex project",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0"
  },
  "scripts": {
    "compile": "tsc",
    "dev": "concurrently \"tsx watch ./src/index.ts\" \"npm run generate\"",
    "dev:mock": "USE_MOCK_API=true tsx watch ./src/index.ts",
    "generate": "graphql-codegen --watch \"src/schema.graphql\"",
    "start": "npm run compile && nodemon ./dist/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts --max-warnings 0"
  },
  "dependencies": {
    "@apollo/datasource-rest": "^6.4.1",
    "@apollo/server": "^4.12.1",
    "@parcel/watcher": "^2.4.0",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.6",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-resolvers": "^4.5.1",
    "@graphql-eslint/eslint-plugin": "^4.4.0",
    "@types/jest": "^29.0.3",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "graphql-eslint": "^1.5.2",
    "jest": "^29.0.3",
    "msw": "^2.10.5",
    "nodemon": "^3.0.0",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.4",
    "typescript": "^5.0.0"
  }
}
